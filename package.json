{
  "name": "codemirror-mode-elixir",
  "version": "1.1.2",
  "description": "A CodeMirror mode for the Elixir language",
  "keywords": [
    "codemirror",
    "elixir",
    "mode"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/codemirror-mode-elixir.js",
  "umd:main": "dist/codemirror-mode-elixir.umd.js",
  "module": "dist/codemirror-mode-elixir.m.js",
  "scripts": {
    "build": "microbundle build index.js",
    "build:site": "NODE_ENV=production webpack --env.singleRun",
    "watch": "microbundle watch index.js",
    "start": "webpack-dev-server",
    "test": "jest",
    "lint": "eslint --ext js index.js tests"
  },
  "repository": {
    "url": "git@github.com:optick/codemirror-mode-elixir.git",
    "type": "git"
  },
  "author": "Ian Walter <public@iankwalter.com>",
  "license": "MIT",
  "peerDependencies": {
    "codemirror": "^5.20.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.5",
    "@fullhuman/purgecss-loader": "^1.0.0",
    "@ianwalter/sled": "^1.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "bootstrap": "^4.1.3",
    "clean-webpack-plugin": "^1.0.0",
    "codemirror": "^5.41.0",
    "common-tags": "^1.8.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.9.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "microbundle": "^0.7.0",
    "mini-css-extract-plugin": "^0.4.4",
    "np": "^3.0.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "style-loader": "^0.23.1",
    "vue": "^2.5.17",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "browserslist": [
    "> 0.25%"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "standard"
    ]
  }
}
